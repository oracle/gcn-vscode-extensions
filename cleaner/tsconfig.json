{
    // https://www.typescriptlang.org/tsconfig#compilerOptions
    "compilerOptions": {
      "allowJs": true,
      "lib": ["es2020", "DOM"],
      "module": "ES2020",
      "moduleResolution": "Node",
      "strict": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }